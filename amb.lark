term : literal
     | term "+" term
     | term "-" term
     | term "*" term
     | term "/" term
     | "(" term ")"

?literal : string
         | SIGNED_NUMBER -> number
         | "true" -> true
         | "false" -> false

string : ESCAPED_STRING

